<Window x:Class="GUI.LauncherSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gui="clr-namespace:GUI"
        Title="LauncherSelect" Height="300" Width="300" Name="LauncherSelectName">
    
    <Window.Resources>
        <gui:launcherViewModel x:Key="launchModel" />
    </Window.Resources>      


        <Grid Background="DarkTurquoise">

        <RadioButton DataContext="{StaticResource ResourceKey=launchModel}" Command="{Binding _create_Mock_Command}" x:Name="Mock_Launcher" Content="Mock" HorizontalAlignment="Left" Height="21" Margin="76,99,0,0" VerticalAlignment="Top" Width="157" FontSize="18" FlowDirection="RightToLeft" />
        <RadioButton DataContext="{StaticResource ResourceKey=launchModel}" Command="{Binding _create_DC_Command}" x:Name="Dream_Cheeky" Content="DreamCheeky" HorizontalAlignment="Left" Height="28" Margin="77,155,0,0" VerticalAlignment="Top" Width="156" FontSize="18" FlowDirection="RightToLeft" />
        <Label Content="Select a launcher type:" HorizontalAlignment="Center" Height="39" Margin="28,30,28,0" VerticalAlignment="Top" Width="236" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Window>
